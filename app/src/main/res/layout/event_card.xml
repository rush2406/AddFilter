<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:adjustViewBounds="true"
        android:id="@+id/event_image"
        android:src="@drawable/tec2"
        />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="168dp"
        android:background="@layout/my_rect"
        android:elevation="7dp">

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="The Three Musketers"
            android:textColor="#000000"
            android:textSize="18sp"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/loc"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/event_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/e4"

            />

        <TextView
            android:id="@+id/loc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"


            android:layout_alignTop="@+id/loc"
            android:layout_marginStart="40dp"
            android:text="New Academic Building"
            android:textColor="#002211"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mem"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignLeft="@+id/loc"
            android:layout_below="@+id/loc"
            android:adjustViewBounds="true"
            android:paddingTop="4dp"
            android:src="@drawable/e1" />

        <TextView
            android:id="@+id/mem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/loc_text"
            android:layout_below="@+id/loc"
            android:text="2-5"
            android:textColor="#002211"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cal"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignLeft="@+id/mem"
            android:layout_below="@+id/mem"


            android:adjustViewBounds="true"
            android:paddingTop="6dp"

            android:src="@drawable/e6" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cal"
            android:layout_alignStart="@+id/loc_text"
            android:text="Date: 28/09  Time: 11:30am"
            android:textColor="#002211"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_text"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"


            android:layout_below="@+id/mem"

            android:layout_marginEnd="13dp"
            android:background="@drawable/button"
            android:paddingTop="25dp"
            android:text="  Register"
            android:textColor="#ffffff"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/event_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info"
        android:background="@layout/my_rect"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/plus"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:src="@drawable/plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="Event Details"
            android:textColor="#002211"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_details"
        android:id="@+id/contact_info"
        android:background="@layout/my_rect"
        android:elevation="6dp"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/plus"
            android:layout_margin="10dp"
            android:id="@+id/plus1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:layout_toRightOf="@+id/plus1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:textColor="#002211"/>

    </RelativeLayout>
</RelativeLayout>
